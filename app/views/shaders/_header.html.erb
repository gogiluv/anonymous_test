<%= replace_plugin_html('server:simple-header') do %>
  <header class="d-header">
    <div class="wrap">
      <div class="contents">
        <div class="row" style="width:100%">
          <div class="title span13" style="display:inline-block;">
            <a href="<%= path "/shaders" %>">
              <%- if application_logo_url.present? %>
                <img src="/images/shader_room/shader_room_logo.png" alt="<%= SiteSetting.title %>" id="site-logo">
              <%- else %>
                <h2 id='site-text-logo'><%= SiteSetting.title %></h2>
              <%- end %>
            </a>
          </div>
          <div class='panel clearfix' style="display:inline-block; float:right;">
              <a href="<%= path "/"%>" class='btn btn-primary' style="margin-right:10px; margin-top:5px;"><i class="fa fa-home"></i>개발자 사이트 가기</a>
            <% unless current_user %>
              <a href="#" onclick="Shader.doLogin()" class='btn btn-primary login-button'><i class="fa fa-user"></i> <%= I18n.t('log_in') %></a>
            <% else %>
		          <ul role="navigation" class="icons d-header-icons clearfix" style="float:right;">
		            <li id="current-user" class="">
			            <a href="#" data-auto-route="true" class="icon" onclick="ShaderUser.open(<%= current_user.id %>)">
                    <div>
                      <img alt="" width="32" height="32" src="<%= current_user.avatar_template.gsub('{size}','64') %>" title="biokim" class="avatar">
				            </div>
			            </a>
		            </li>
		          </ul>
	          <% end %>
          </div>
        </div>
      </div>
    </div>
  </header>
<% end %>
