    canvas {
	position: absolute;
    }
    .dg.ac {
	position: relative !important;
    }
    .dg.main.a{
	max-height: 760px;
	overflow-y: auto;
	width: 370px !important;
    }
    .dg.main.a > ul{
	max-height: 740px;
    }

</style>
  <%= javascript_include_tag "shaders_manifest", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "bktree_manifest", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "bktree_manifest", media: "all", "data-turbolinks-track" => true %>
</head>
<body <% if @custom_body_class %>class="<%= @custom_body_class %>"<% end %>>
  <%= theme_lookup("header") %>
  <%= build_plugin_html 'server:header' %>
  <section class="loading">
	<p><strong>로딩중...</strong></p>		
  </section>
  <section id='main'>
    <%= render partial: 'header' %>
    <div id="main-outlet" class="<%= @container_class ? @container_class : 'wrap' %>">
      <%= yield %>
    </div>
  </section>
  <%= theme_lookup("footer") %>
  <%= build_plugin_html 'no-client:footer' %>
  <%= build_plugin_html 'server:before-body-close' %>
</body>
</html>
